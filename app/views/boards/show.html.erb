
<h1><%= @board.name %></h1>
<hr>

<%= @board.content %>

<%= link_to 'index', boards_path() %>

<%= link_to 'edit', edit_board_path(@board) %>

<h1>Comments</h1>
<% @board.comments.each do |c| %>
  <p>
  <%= c.content %>
  <br>
  <%= c.created_at.strftime("%Y/%M/%D") %>
  <br>
  <%= link_to 'delete', board_comment_path(@board, c), method: :delete %>
  <%= link_to 'edit', edit_board_comment_path(@board, c) %>
  </p>
<% end %>

<h1>new comment</h1>
<p>
<%= form_for [@board, @board.comments.build] do |f| %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>
</p>
