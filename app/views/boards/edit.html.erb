<h1>Boards#edit</h1>
<p>Find me in app/views/boards/edit.html.erb</p>

<% if @board.errors.any? %>
  <h2>some errors had occured.</h2>
  <% @board.errors.full_messages.each do |e| %>

    <%= e %>
  <% end %>
<% end %>

<%= form_for @board do |f| %>
  <%= f.text_field :name, placeholder:'board' %>
  <%= f.text_area :content, placeholder: 'content' %>
  <%= f.submit "送信！" %>
<% end %>